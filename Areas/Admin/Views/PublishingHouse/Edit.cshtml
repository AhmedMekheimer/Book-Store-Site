@model PublishingHouse

<div class="admin-container">
	<div class="page-header">
		<h1 class="page-title">Edit @Model.Name Publishing House</h1>
		<a class="btn btn-back" asp-area="Admin" asp-controller="PublishingHouse" asp-action="Index">
			Back to Publishing Houses
		</a>
	</div>

	<div class="create-form-container">
		<form asp-action="Edit" method="post">
			<div class="form-group">
				<label for="Name">Publishing House Name</label>
				<input type="text" id="Name" name="Name" class="form-control" placeholder="Enter Publishing House name" value="@Model.Name" required>
			</div>

			<div class="form-group">
				<label for="Description">Description</label>
				<textarea id="Description" name="Description" class="form-control" rows="4" placeholder="Enter Publishing House description">@Model.Description</textarea>
				<div class="form-hint">Describe this Publishing House (optional)</div>
			</div>

			<div class="form-actions">
				<button type="reset" class="btn btn-cancel">
					Reset
				</button>
				<button type="submit" class="btn btn-create">
					Save Changes
				</button>
			</div>
		</form>

		<div class="form-preview">
			<h3>Preview</h3>
			<div class="preview-card">
				<div class="preview-icon" id="previewIcon">
					<i class="fas fa-book"></i>
				</div>
				<div class="preview-details">
					<h4 id="previewName">Publishing House Name</h4>
					<p id="previewDescription">Description will appear here</p>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<script>
		document.addEventListener('DOMContentLoaded', function() {
			// Live preview for Publishing House name
			const nameInput = document.getElementById('Name');
			const previewName = document.getElementById('previewName');

			nameInput.addEventListener('input', function() {
				previewName.textContent = this.value || 'Publishing House Name';
			});

			// Live preview for description
			const descInput = document.getElementById('Description');
			const previewDesc = document.getElementById('previewDescription');

			descInput.addEventListener('input', function() {
				previewDesc.textContent = this.value || 'Description will appear here';
			});

			// Form validation
			const form = document.querySelector('form');

			form.addEventListener('submit', function(e) {
				if (!nameInput.value.trim()) {
					e.preventDefault();
					nameInput.focus();
					alert('Publishing House name is required');
				}
			});
		});
	</script>
}
