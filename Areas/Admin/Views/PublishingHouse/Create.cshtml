<div class="admin-container">
	<div class="page-header">
		<h1 class="page-title">Create New Publishing House</h1>
		<a class="btn btn-back" asp-area="Admin" asp-controller="PublishingHouse" asp-action="Index">
			Back to PublishingHouses
		</a>
	</div>

	<div class="create-form-container">
		<form asp-action="Create" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="Name">Publishing House Name</label>
				<input type="text" id="Name" name="Name" class="form-control" placeholder="Enter Publishing House name" required>
			</div>

			<!--Images-->
			<div class="form-group mb-3">
				<label>Upload Image</label>
				<input type="file" class="form-control" accept="image/*" id="files" name="files" multiple required>
			</div>

			<!--Videos-->
			<div class="form-group mb-3">
				<label>Upload Videos</label>
				<input type="file" class="form-control" accept="video/*" id="files" name="files" multiple required>
			</div>

			<div class="form-group">
				<label for="Description">Description</label>
				<textarea id="Description" name="Description" class="form-control" rows="4" placeholder="Enter Publishing House description"></textarea>
				<div class="form-hint">Describe this Publishing House (optional)</div>
			</div>

			<div class="form-actions">
				<button type="reset" class="btn btn-cancel">
					Reset
				</button>
				<button type="submit" class="btn btn-create">
					Create Publishing House
				</button>
			</div>
		</form>

	</div>
</div>
